<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.fantasyfang.materialluckywheel.MaterialLuckyWheelView
        android:id="@+id/lucky_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mlwOuterRingWidth="15dp"
        app:mlwOuterRingColor="@color/white"
        app:mlwPieTextSize="14sp"
        app:mlwPieEdgeColor="@color/white"
        app:mlwPieEdgeWidth="5dp"
        app:mlwCenterRadius="60dp"
        app:mlwCenterText="Go"
        app:mlwCenterTextSize="14"
        app:mlwCenterTextColor="@color/black"
        app:mlwCenterBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/rotate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>